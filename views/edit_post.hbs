        <h1 style="color:black; text-align:center; margin-top:2px;">Edit Post </h1>

		<form id="editProf" method="post">
        <div style="text-align: center; ">
            <div class="newpost" id="producttitle">
				<input type="text" placeholder="Item Name" name="itemname" id="newitemname" required>
			</div>
			
			<div class="newpost" id="producttitle">
				<input type="textarea" placeholder="Item Description" name="itemdesc" id="newitemdesc" required>
			</div>
			
			<div class="newpost" id="producttitle">
				<p style="color: black">Starting Price</p>
				<input type="number" name="price" id="newprice" placeholder="1.00" step="0.01" min="1.00" style="color: black; width: 10%"; required>
			</div>
			
			<div class="newpost" id="producttitle">
				<p style="color: black">End Date</p>
				<input type="date" name="date" id="date" style="color: black; width: 25%;"required>
			</div>
			
			<div class="newpost" id="pic">
				<input type="file" name="imgurl" id="imgurl" accept="image/*" style="color: black;">
			</div>

        </div>
			
